# Configuration des paramètres de trading
# Copiez ce fichier en .env et modifiez les valeurs selon vos besoins

# Nombre d'epochs avant d'activer la détection de drawdown
DD_WINDOW=100

# Drawdown par rapport au plus haut -> régime "crash"
DD_THRESHOLD=0.24

# Allocation à Asset A en cas de crash
SAFE_WEIGHT=0.25

# Allocation normale à Asset A
FULL_WEIGHT=1.0

# Vitesse de convergence vers la cible (0 = lent, 1 = instantané)
SMOOTHING=0.5
